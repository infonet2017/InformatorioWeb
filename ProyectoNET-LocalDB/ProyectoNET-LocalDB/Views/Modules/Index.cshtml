@model IEnumerable<ProyectoNET_LocalDB.Models.Module>

@{
    Layout = "~/Views/Shared/_CourseLayout.cshtml";
}



@foreach (var item in Model)
{
    <div class="col-12">
        <div class="card-inf-gray text-white">
            <div class="card-header-inf bg-inf-blue"><p class="lead m-0">@Html.DisplayFor(modelItem => item.Name)</p></div>
            <div class="card-body-inf  text-dark">
                <div class="card-text">
                    <p>@Html.DisplayFor(modelItem => item.Description)</p>
                    <p>Profesores:</p>
                    @foreach (var teacher in item.Teachers)
                    {
                        <p>- @Html.DisplayFor(modelItem => teacher.Name)</p>
                    }

                </div>

                <a class="btn btn-inf btn-sm" asp-action="Details" asp-route-id="@item.ID">Ver Más</a>
            </div>
        </div>
    </div>
}
