            <nav class="navbar bg-inf-blue navbar-expand-lg">
                <a class="navbar-brand" href="index.html">
                    <img src="Images/Logotipo-Informatorio.svg" class="align-top" alt="Cinque Terre" height="25">
                </a>
                <div class="collapse navbar-collapse justify-content-end" id="responsivo">
                    <div class="row">
                        <div class="col-12">
                            <ul class="nav navbar-nav ml-auto  mt-2 mt-md-0 enlace">
                                <li><a class="nav-item nav-link text-white" href="#">¿Qué es el informatorio?</a></li>
                                <li><a class="nav-item nav-link text-white" href="#">Cursos</a></li>
                                <li><a class="nav-item nav-link text-white" href="#">Proyectos</a></li>
                                <li><a class="nav-item nav-link text-white" href="#">Galería</a></li>
                                <li><a class="nav-item nav-link text-white" href="#">Blog</a></li>
                                <li><a class="nav-item nav-link text-white" href="#">INICIAR SESIÓN</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <!-- BARRA LATERAL -->
            <div class="col-2 bg-white shad-inf p-0">
                <div class="row p-0 m-3">
                    <div class="col-12 btn btn-sm btn-inf mb-3">Ver Cursos</div>
                    <p class="h6">Los títulos van en h6</p>
                    <p><small>Los demás elementos como tel texto van en un "p" común como el que estás viendo, pero con la etiqueta small</small></p>
                    <ul class="list-unstyled col-12 p-0">
                        <li class="h6">Título</li>
                        <li><small>-Apartado 1</small></li>
                        <li><small>-Apartado 2</small></li>
                        <li><small>-Apartado 3</small></li>
                        <li><small>-Apartado 4</small></li>
                    </ul>
                    <ul class="list-unstyled col-12 p-0">
                        <li class="h6">Título</li>
                        <li><small>-Apartado 1</small></li>
                        <li><small>-Apartado 2</small></li>
                        <li><small>-Apartado 3</small></li>
                        <li><small>-Apartado 4</small></li>
                    </ul>
                </div>
            </div>
            <div class="col-10 p-0">
                <div class="card-inf-gray my-3 ml-0">
                    <div class="card-header-inf bg-inf-blue h3 text-white">@ViewBag.Title</div>
                    <div style="background-color: whitesmoke;">
                        <div class="card-body-inf ">
                            <div class="card-body-inf-white pre">
                                @RenderBody()
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer class="bg-inf-blue">
        <div class="container">
            <div class="row text-white py-3">
                <div class="col-6 h6">Contacto</div>
                <div class="col-6 h6">Redes</div>
                <div class="col-2">
                    <ul class="list-unstyled">
                        <li class="h6">Informtorio Chaco</li>
                        <li>Arturo Illia 1055</li>
                        <li>XXX XXX-XXXX</li>
                    </ul>
                </div>
                <div class="col-2">
                    <ul class="list-unstyled">
                        <li class="h6">Informtorio Chaco</li>
                        <li>Arturo Illia 1055</li>
                        <li>XXX XXX-XXXX</li>
                    </ul>
                </div>
                <div class="col-2">
                    <ul class="list-unstyled">
                        <li class="h6">Informtorio Chaco</li>
                        <li>Arturo Illia 1055</li>
                        <li>XXX XXX-XXXX</li>
                    </ul>
                </div>
                <div class="col-6 align-items-center">
                    <a href="#"><img src="~/Content/Images/facebook-logo-button.png" height="40px"></a>
                    <a href="#"><img src="~/Content/Images/twitter-logo-button.png" height="40px"></a>
                </div>
                <div class="col-12">
                    <small>Información institucional y todo lo necesario de esta pequeña línea de texto</small>
                </div>
            </div>
        </div>
    </footer>
    <environment>
        <script src="~/Scripts/jquery-1.10.2.min.js" asp-append-version="true"></script>
        <script src="~/Scripts/bootstrap.min.js" asp-append-version="true"></script>
        <script type="text/javascript" src="js/bootstrap.js" asp-append-version="true"></script>
        <script type="text/javascript" src="js/bootstrap.bundle.js" asp-append-version="true"></script>
    </environment>

</body>



@RenderSection("scripts", required: false)
</html>


