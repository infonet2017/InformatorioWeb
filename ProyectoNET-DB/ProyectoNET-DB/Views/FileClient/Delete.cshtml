@model ProyectoNET_DB.Info2017.Filedescription
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_ModuleLayout.cshtml";
}

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>

<div class="col-10 ">
    <div class="card-inf my-3 ml-0">
        <div class="card-header-inf bg-inf-blue h3 text-white">@ViewBag.title</div>
        <div class="card-body-inf">

            <ul class="nav nav-tabs card-header-tabs nav-fill px-2">

                <li class="nav-item"><a class="nav-link inactive-inf text-white" asp-controller="Posts" asp-action="Index">Muro</a></li>
                <li class="nav-item"><a class="nav-link active-inf" asp-controller="FileClient" asp-action="Index">Materiales</a></li>
                <li class="nav-item"><a class="nav-link inactive-inf text-white" asp-controller="Evaluations" asp-action="Index">Instancias Evaluativas</a></li>
            </ul>

            <div class="card-body-inf bg-inf-gray">



                <div class="card-inf mt-3">
                    <div class="card-header-inf bg-inf-blue text-white ">

                        <h4 class="text-center">¿Está Seguro que desea eliminar la siguiente Publicación?</h4>
                    </div>
                    <div class="card-body-inf p-3">
                        <div>
                            <dl class="d-lg-table-row">
                                <dt>
                                    <p>Nombre del Archivo</p>
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.FileName)
                                </dd>
                                <dt>

                                    <p>Descripción</p>
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.Description)
                                </dd>
                                <dt>
                                    <p>Fecha de Subida </p>
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.CreatedTimestamp)
                                </dd>
                                <dt>
                                    <p>Docente</p>
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.TeacherName)
                                </dd>
                            </dl>

                            <form asp-action="Delete">
                                <input type="hidden" asp-for="IdfileDescription" />
                                <input type="submit" value="Eliminar" class="btn btn-inf btn-sm mb-3" />
                                <a asp-action="Index" class="btn btn-inf btn-sm mb-3">Cancelar</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
</div>